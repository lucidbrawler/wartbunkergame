---
import Discord from '../BalkyImages/footerimgs/Discord Logos.svg';
import Telegram from '../BalkyImages/footerimgs/telegram-1.png';
import Twitter from '../BalkyImages/footerimgs/twitter.svg';
import Github from '../BalkyImages/footerimgs/github.svg';

---
<style>
    .footer{
        
        margin-top: 1rem;
        height: 20rem;
        background: radial-gradient(
            circle at 24.1% 68.8%,
            rgb(22, 22, 22) 0%,
            rgb(0, 0, 0) 99.4%
        );
        color: white;
    }
    @media (max-width: 50rem) {
        .footer{
        height: 30rem;
        background: radial-gradient(
            circle at 24.1% 68.8%,
            rgb(22, 22, 22) 0%,
            rgb(0, 0, 0) 99.4%
        );
        color: white;
    }
        
    }
section{
    padding: 1rem;
    display: flex;
}

socials{
    display: flex;
  
    justify-content: left;
}
socials > a {
   padding: .8rem;
}
.thedottedline{
    border-bottom-style: dotted;
    border-bottom-width: .1rem;
    max-width: 34rem;
    margin-left: 2rem;
    
}

.footernav{
    align-items: center;
    max-width: 55rem;
    justify-content: space-between;
}
.footernav > a{
    padding-left: 1rem;
}
@media (max-width:60rem) {
    .thedottedline{
        text-align: center;
        align-items: center;
        justify-content: center;
    border-bottom-style: dotted;
    border-bottom-width: .1rem;
    max-width: 25rem;
    margin-left: 2rem;
}
    .footernav{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
}

}
.socials{ 
    
    margin: 1rem;
    display: block;}
.logo{
    width: 13rem;
}
</style>



<div class="footer">
  
    <div class="thedottedline"></div>
    <section class="socials">
        <p>Join our community!</p>
        <socials>
            <a href='https://discord.com/invite/QMDV8bGTdQ'><img src={Discord.src}/></a>
            <a  href='https://t.me/warthognetwork'><img src={Telegram.src}/></a>
            <a href='https://github.com/warthog-network'><img src={Github.src}/></a>
            <a href='https://x.com/warthognetwork'><img src={Twitter.src}/></a>
        </socials>
    </section>
    <section>
        <small>
            <p>Copyright Â© Warthog 2025 Website Design by Losthymns TheFunVampire Logo by BalkyBot.</p>

    </section>
</div>
